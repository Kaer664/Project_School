<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.example.lucky.myapplication.view.CircleImageView
        android:padding="5dp"
        android:layout_width="@dimen/details_item_head_img_width"
        android:layout_height="@dimen/details_item_head_img_width"
        android:layout_margin="@dimen/details_item_head_img_margin"
        android:id="@+id/itemHeadImg"
        android:layout_gravity="center_vertical"
        android:src="@drawable/qq_head2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/itemHeadImg"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:layout_margin="@dimen/details_item_margin_text"
            android:textColor="@color/black"
            android:textSize="@dimen/details_item_name_text"
            android:text="姓名一"/>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="@dimen/details_item_margin_text"
            android:textSize="@dimen/details_item_msg_text"
            android:text="这是内容这是内容这是内容"
            android:id="@+id/itemMessage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/details_item_margin_text"
            android:gravity="center_vertical"
            android:id="@+id/itemDate"
            android:textSize="@dimen/details_item_date_text"
            android:textColor="#9b9b9b"
            android:text="2019-2-24"/>
    </LinearLayout>
    </LinearLayout>