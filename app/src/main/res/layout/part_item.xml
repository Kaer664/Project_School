<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/park_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/part_img_height"
        android:layout_weight="1"
        android:src="@drawable/anniu" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/part_img_height"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="@dimen/part_line_padding">

        <TextView
            android:id="@+id/park_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scrollbars="vertical"
            android:text="你好"
            android:textColor="@color/black"
            android:textSize="@dimen/part_text_size" />


        <TextView
            android:id="@+id/park_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="你好"
            android:textColor="@color/colorgray" />
    </LinearLayout>

</LinearLayout>